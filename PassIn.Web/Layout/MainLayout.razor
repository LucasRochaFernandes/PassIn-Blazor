@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Style="background-color: #B3AC9E;" Fixed="true" Elevation="2">
        <MudImage Src="logo.png" Width="80"></MudImage>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudAvatar Color="Color.Default">
                    <MudIcon Icon="@Icons.Material.Filled.Person"></MudIcon>
                </MudAvatar>
                <MudButton Class="ml-4" Href="logout"
                           Variant="Variant.Outlined"
                           Color="Color.Default">Logout</MudButton>
            </Authorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer Style="background-color: #E0DED8" Open="true" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent Class="main-content" Style="background-color: #F4F1EB; height: 100vh;">
        <MudContainer Style="padding: 40px;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
   

